#comment {
  margin: 0 1rem;
  padding: 1rem;
  background-color: var(--post-block-bg-color);

  +mobile() {
    margin: 0;
  }
}

.comment-tooltip {
  font-size: 0.8rem;
  color: var(--hty-text-color);
  padding: 0.5rem;
  border: 1px solid #f0f0f0;
  margin-bottom: 1rem;
}

#github-issues {
  margin: 1rem;
}

// valine
.v[data-class=v] p {
  color: var(--hty-text-color) !important;

  code {
    color: black;
  }
}
